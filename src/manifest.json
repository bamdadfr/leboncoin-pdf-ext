{
  "name": "leboncoin-pdf",
  "short_name": "leboncoin-pdf",
  "description": "leboncoin-pdf",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "512": "assets/icon_befour.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "512": "assets/icon_befour.png"
    },
    "default_title": "leboncoin-pdf",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.leboncoin.fr/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "*://*.leboncoin.fr/*"
  ]
}
