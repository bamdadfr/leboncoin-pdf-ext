{
  "name": "leboncoin-pdf-ext",
  "version": "1.0.0",
  "description": "PDF exporter for leboncoin.fr",
  "license": "MIT",
  "author": "Bamdad Sabbagh <hello@bamdadsabbagh.com>",
  "scripts": {
    "build:clean": "rm -rf web-ext-artifacts",
    "build:ext": "web-ext build --source-dir dist",
    "build": "yarn clean && yarn build:webpack && yarn build:ext",
    "build:webpack": "NODE_ENV=production webpack",
    "clean": "yarn dev:clean && yarn build:clean",
    "dev:chrome": "yarn clean && concurrently 'yarn dev:webpack' 'wait-on dist/manifest.json && yarn dev:ext:chrome'",
    "dev:clean": "rm -rf dist",
    "dev:ext:chrome": "web-ext run --source-dir dist -t chromium",
    "dev:ext:firefox": "web-ext run --source-dir dist",
    "dev:firefox": "yarn clean && concurrently 'yarn dev:webpack' 'wait-on dist/manifest.json && yarn dev:ext:firefox'",
    "dev:webpack": "webpack",
    "sort:package": "npx sort-package-json"
  },
  "dependencies": {
    "jspdf": "^1.5.3"
  },
  "devDependencies": {
    "@bamdadsabbagh/eslint-config": "^1.3.6",
    "@bamdadsabbagh/stylelint-config": "^1.2.17",
    "concurrently": "^5.2.0",
    "copy-webpack-plugin": "^6.0.3",
    "wait-on": "^5.1.0",
    "web-ext": "^4.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
